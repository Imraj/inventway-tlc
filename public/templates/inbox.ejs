<% include partials/head %>
<% include partials/header %>
		<div id="fh5co-about-section" style="margin-top:5em;margin-bottom:5em;">
			<div class="container">

				<div class="row">

					<% if(locals.messages && locals.messages.length > 0) { %>
						<div class="col-md-12 text-center">
								<% locals.messages.forEach(function(msg){ %>
											<div class="about-wrap">
												 <p>
													 <%= msg.message %>
												 </p>
												 <h4 class="pull-right">
													 <%= msg.createdAt %>
												 </h4>
											</div>
								<% }) %>
						</div>
					<% }else{ %>

						<div class="col-md-12 text-center">
							<div class="about-wrap">
								<div class="desc text-center">
									<h3>Want to contact this user?</h3>
									<p class="pos">Send him a message...</p>


								</div>
							</div>
						</div>

					<% } %>

					<div class="col-md-12 text-center">
						<div class="about-wrap">
							<div class="desc">
								<form>
									<div class="col-md-12">
										<div class="form-group">
											<textarea class="form-control" id="" cols="30" rows="2" name="message" placeholder="What's on your mind?"></textarea>
										</div>
										<div class="form-group">
											<input type="submit" value="Send message" class="btn btn-primary col-md-12" style="height:2em;">
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<% include partials/footer %>


	</div>
	<!-- END fh5co-page -->

	</div>


	</body>
</html>
